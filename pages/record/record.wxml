<!--pages/record/record.wxml-->

<view class="container">
    <text class="descLabel">{{descLabel}}</text>

    <image class="userinfo-icon" src="{{userInfo.avatarUrl}}"   background-size="cover"></image>

<block wx:if="{{true}}">
    <view class="desc-di">第</view>
    <text class="desc-day">{{userInfo.nickName}}</text>
    <text class="desc-tian">天</text>
</block>
    

    

<view class="section">
  <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
    <!--<view class="picker">
      当前选择: {{date}}
    </view>-->

    <button wx:if="{{true}}" type="primary" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}"> 小姨妈来了 </button>
    <button wx:else type="primary" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}"> 小姨妈走了 </button>

  </picker>
</view>

</view>
